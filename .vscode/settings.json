{
  "css.validate": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  // Tailwind CSS Autocomplete, add more if used in projects
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "classNames",
    "leftIconClassName",
    "rightIconClassName",
    "iconClassName",
    "containerClassName",
    "imgClassName",
    "blurClassName",
    "childrenClassName"
  ],
  "typescript.preferences.importModuleSpecifier": "non-relative"
}
